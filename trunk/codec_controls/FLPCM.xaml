<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2006" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="XviD4PSP.FLPCM"
	x:Name="UserControl"
	Width="Auto" Height="Auto">

	<Grid Width="Auto" Height="Auto" x:Name="LayoutRoot" Background="{x:Null}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Image Margin="0,0,0,0" Source="..\pictures\logo_FF_LPCM.png" Stretch="None" VerticalAlignment="Top" d:LayoutOverrides="Width" HorizontalAlignment="Center"/>
		<Grid Margin="0,95,0,0" Background="{DynamicResource black_gradient_2}" Width="312" Height="59">
			<ComboBox x:Name="combo_bits" Height="Auto" IsSynchronizedWithCurrentItem="True" HorizontalAlignment="Right" Margin="0,19,8,0" Width="128" SelectionChanged="combo_bits_SelectionChanged" d:LayoutOverrides="Height" VerticalAlignment="Top"/>
			<Label OpacityMask="{x:Null}" x:Name="text_bits" Content="Bits:" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="14" Foreground="#FFFFFFFF" Height="Auto" HorizontalAlignment="Left" Margin="8,15,0,0" d:LayoutOverrides="Height" VerticalAlignment="Top"/>
		</Grid>
	</Grid>
</UserControl>