<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="XviD4PSP.FFMpegSourceHelper"
	x:Name="Window"
	Title="FFMpegSourceHelper"
	Width="305" Height="90" ResizeMode="NoResize" SizeToContent="Width" WindowStartupLocation="CenterOwner" Closing="Window_Closing">

	<Grid x:Name="LayoutRoot" Background="{DynamicResource black_gradient_2}">
		<ProgressBar x:Name="prCurrent" Foreground="{DynamicResource StrawBerryBrush}" Margin="8,0,8,8" VerticalAlignment="Bottom" Height="12" IsIndeterminate="True"/>
		<Label OpacityMask="{x:Null}" x:Name="text_info" Content="Please wait... Work in progress..." Background="{x:Null}" BorderBrush="{x:Null}" FontSize="14" Foreground="#FFFFFFFF" Margin="8,8,8,0" VerticalAlignment="Top" Height="Auto"/>
	</Grid>
</Window>